{% extends 'base.html.twig' %}
{% block body%}
    <div class="d-flex justify-content-center">
        <div class="card col-lg-6 m-3">
            <h1>Liste des villes</h1>
        </div>
        <hr>
        <div class="">
            {% for ville in Villes %}
            <div class="p-2 font-moyenne d-flex flex-row m-3 card">
            <div class="col-lg-9 d-flex flex-row text-center">
            <div class="col-lg-5 pt-1">
                Ville: {{ ville.getNom }}
            </div>
            <div class="pt-1">
            |
            </div>
            <div class="col-lg-6 pt-1">
                 Code Postal: {{ ville.getCodePostal }}
            </div>
            </div>
            <div class="d-flex justify-content-end">
                <a href="Villes/delete{{ villes.getId }}" class="btn-outline-primary mx-3">Supprimer</a>
            </div>


            </div>
        </div>
        {% endfor %}
    </div>
    <hr>

    <div class="d-flex justify-content-between m-3">
        {{ form_start(villeForm) }}
        {{ form_label(villeForm.nom, 'Ville') }}
        {{ form_widget(villeForm.nom) }}
        {{ form_label(villeForm.codePostal, 'Code Postal') }}
        {{ form_widget(villeForm.nom) }}
    </div>
{% endblock %}
{% block title %}Sortir | Home{% endblock %}
